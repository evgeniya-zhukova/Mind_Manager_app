<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Admin.AdminQuestionnaireActivity">

        <Button
            android:id="@+id/btnLogoutAdminQuestionnaire"
            android:layout_width="91dp"
            android:layout_height="33dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:text="Logout"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:text="Mind Manager app"
            android:textColor="#FF9800"
            android:textSize="26sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lblTitleMoodsForCategory"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Questions List"
            android:textColor="#5A5555"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView48"
                android:layout_width="258dp"
                android:layout_height="23dp"

                android:text="  Question"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="424dp"
            tools:ignore="NestedScrolling" />

        <Button
            android:id="@+id/btnAddQuestion"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="5dp"
            android:text="Add New Question" />

    </LinearLayout>
</ScrollView>